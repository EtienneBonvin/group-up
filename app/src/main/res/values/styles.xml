<resources>

    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Color Scheme -->
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="android:editTextColor">@color/secondaryTextColor</item>
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/secondaryColor</item>
        <item name="android:textColorHint">@color/secondaryDarkColor</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="android:background">@color/transparent</item>

        <!-- Default text size -->
        <item name="android:textSize">@dimen/normal_text_size</item>
    </style>

    <!-- Alert dialog theme -->
    <style name="AboutDialog" parent="@android:style/Theme.Holo.Dialog.NoActionBar">
        <item name="android:editTextColor">@color/primaryTextColor</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:background">@color/transparent</item>
        <item name="colorAccent">@color/white</item>
        <item name="android:textColorHint">@color/white</item>

    </style>

    <!-- Start up screen theme -->
    <style name="StartUpStyle" parent="Theme.AppCompat.NoActionBar">
        <item name="android:background">@color/primaryColor</item>
    </style>

    <!-- Toolbar theme -->
    <style name="ToolbarStyle" parent="Theme.AppCompat.NoActionBar">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>

    <!-- Theme of category and fields used in settings, description and user profile -->
    <style name="EventCategories" parent="Base.TextAppearance.AppCompat.Subhead">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="EventFields" parent="Base.TextAppearance.AppCompat.Subhead">
        <item name="android:textColor">@color/middle_grey</item>
        <item name="android:layout_marginBottom">@dimen/default_gap</item>
    </style>

    <!-- DatePicker and TimePicker theme -->
    <style name="Picker" parent="@android:style/Theme.Holo.Light.Dialog.NoActionBar">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <!-- Define style for text buttons, include @style/ButtonStyle in xml -->
    <style name="ButtonStyle" parent="@style/Base.Widget.AppCompat.Button.Colored">
        <item name="android:background">@color/primaryLightColor</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Define style for timePicker and datePicker here, include @style/DateButtonStyle in xml -->
    <style name="DateButtonStyle" parent="@style/Base.Widget.AppCompat.Button.Colored">
        <item name="backgroundTint">@color/primaryLightColor</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!-- Needed for scrolling view used in event description -->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

</resources>
