<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.gms.common.SignInButton
        android:id="@+id/sign_in_button_google"
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:id="@+id/linear_layout_log_in_user_stats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_view_first_name_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_view_first_name_info"/>

        <TextView
            android:id="@+id/text_view_first_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_view_first_name_text"/>

        <TextView
            android:id="@+id/text_view_last_name_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_view_last_name_info"/>

        <TextView
            android:id="@+id/text_view_last_name_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_view_last_name_text"/>

        <TextView
            android:id="@+id/text_view_email_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_view_email_info"/>

        <TextView
            android:id="@+id/text_view_email_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_view_email_text"/>

        <TextView
            android:id="@+id/text_view_account_type_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_view_account_type_info"/>

        <TextView
            android:id="@+id/text_view_account_type_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_view_account_type_text"/>

        <Button
            android:id="@+id/button_sign_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_sign_out_text"/>

    </LinearLayout>

</RelativeLayout>
