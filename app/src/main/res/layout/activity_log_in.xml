<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ch.epfl.sweng.groupup.activity.login.LogInActivity"
    tools:layout_editor_absoluteX="8dp"
    tools:layout_editor_absoluteY="8dp">

    <com.google.android.gms.common.SignInButton
        android:id="@+id/sign_in_button_google"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="64dp"
        android:layout_marginEnd="64dp"
        android:layout_marginLeft="64dp"
        android:layout_marginRight="64dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="64dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
        android:id="@+id/linear_layout_log_in_user_stats"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/text_view_first_name_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_view_first_name_info"/>

        <TextView
            android:id="@+id/text_view_first_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_view_first_name_text"/>

        <TextView
            android:id="@+id/text_view_last_name_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_view_last_name_info"/>

        <TextView
            android:id="@+id/text_view_last_name_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_view_last_name_text"/>

        <TextView
            android:id="@+id/text_view_email_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_view_email_info"/>

        <TextView
            android:id="@+id/text_view_email_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_view_email_text"/>

        <TextView
            android:id="@+id/text_view_account_type_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_view_account_type_info"/>

        <TextView
            android:id="@+id/text_view_account_type_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_view_account_type_text"/>

        <Button
            android:id="@+id/button_sign_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="@string/button_sign_out_text"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>