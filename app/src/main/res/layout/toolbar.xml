<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10sp">

        <ImageView
            android:id="@+id/icon_access_group_list"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.1"
            android:src="@drawable/uparrow"
            android:contentDescription="@string/toolbar_description_group_list_icon"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:gravity="center"/>

        <ImageView
            android:id="@+id/icon_access_settings"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.1"
            android:src="@drawable/settings_logo"
            android:contentDescription="@string/toolbar_description_settings_icon"/>

    </LinearLayout>

</RelativeLayout>