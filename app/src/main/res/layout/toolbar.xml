<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/colorPrimary"
    android:paddingBottom="10sp">

        <ImageView
            android:id="@+id/icon_access_group_list"
            android:layout_width="0dp"
            android:layout_height="62dp"
            android:layout_weight="0.1"
            android:background="@android:color/transparent"
            android:contentDescription="@string/toolbar_description_group_list_icon"
            android:src="@drawable/uparrow" />

        <TextView
            android:layout_width="3dp"
            android:layout_height="63dp"
            android:layout_weight="0.5"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:text="@string/app_name"
            android:textSize="30sp" />

        <ImageView
            android:id="@+id/icon_access_user_profile"
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:layout_weight="0.1"
            android:background="@android:color/transparent"
            android:contentDescription="@string/user_profile"
            android:src="@drawable/user_profile" />

        <ImageView
            android:id="@+id/icon_access_settings"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.1"
            android:background="@android:color/transparent"
            android:contentDescription="@string/toolbar_description_settings_icon"
            android:src="@drawable/settings_logo" />

</LinearLayout>

