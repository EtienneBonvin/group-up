<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10sp"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <ImageView
            android:layout_width="0dp"
            android:id="@+id/icon_access_group_list"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:src="@drawable/uparrow"
            android:contentDescription="@string/toolbar_description_group_list_icon"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:gravity="center"/>

        <ImageView
            android:contentDescription="@string/user_profile"
            android:id="@+id/icon_access_user_profile"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.1"
            android:src="@drawable/user_profile"/>

        <ImageView
            android:id="@+id/icon_access_settings"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.1"
            android:src="@drawable/settings_logo"
            android:contentDescription="@string/toolbar_description_settings_icon"/>

</LinearLayout>

