<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    style="@style/ToolbarStyle">

    <ImageView
        android:id="@+id/icon_access_group_list"
        android:layout_width="0dp"
        android:layout_height="62dp"
        android:layout_weight="0.09"
        android:background="@android:color/transparent"
        android:contentDescription="@string/toolbar_description_group_list_icon"
        android:src="@drawable/ic_back_arrow" />

    <TextView
        android:layout_width="3dp"
        android:layout_height="62dp"
        android:layout_weight="0.6"
        android:background="@android:color/transparent"
        android:gravity="center_vertical"
        android:text="@string/app_name"
        android:textColor="@color/primaryTextColor"
        style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"/>

    <ImageView
        android:id="@+id/icon_access_user_profile"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.065"
        android:background="@android:color/transparent"
        android:contentDescription="@string/user_profile"
        android:src="@drawable/ic_user" />

    <ImageView
        android:id="@+id/icon_access_settings"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.065"
        android:background="@android:color/transparent"
        android:contentDescription="@string/toolbar_description_settings_icon"
        android:src="@drawable/ic_settings"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="10dp"
        />

</LinearLayout>

