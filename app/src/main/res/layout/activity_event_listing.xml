<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ch.epfl.sweng.groupup.activity.eventListing.EventListingActivity">

    <include
        layout="@layout/toolbar"
        android:id="@+id/toolbar" />

    <!-- ScrollView of all future events, the create event button, -->
    <!-- and all past events -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar">

        <!-- The LinearLayout of all the elements in the ScrollView -->
        <!--xmlns:android="http://schemas.android.com/apk/res/android" line that was in linear layout
        but lint doesn't want it-->
        <LinearLayout
            android:id="@+id/linear_layout_event_list"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:orientation="vertical"
            android:gravity="top">

        </LinearLayout>
    </ScrollView>
</RelativeLayout>