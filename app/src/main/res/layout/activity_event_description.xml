<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <include
        layout="@layout/toolbar"
        android:id="@+id/toolbar"/>

    <Button
        android:id="@+id/remove_event_button"
        style="@style/ButtonStyle"
        android:layout_width="130dp"
        android:layout_height="34dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/toolbar"
        android:text="@string/leave_event"
        android:textSize="12sp" />


    <TextView
        android:id="@+id/event_description_tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:text="@string/event_description_tv_name"
        android:textAlignment="textStart"
        android:layout_below="@id/remove_event_button"/>

    <EditText
        android:id="@+id/event_description_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/event_description_tv_name"
        android:hint="@string/change_the_name_of_the_event"
        android:inputType="text"
        android:text="@string/no_event_name"
        android:textColor="@color/primaryTextColor" />

    <TextView
        android:id="@+id/event_description_tv_start_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:text="@string/event_description_tv_start_date"
        android:textAlignment="textStart"
        android:layout_below="@id/event_description_name"/>

    <TextView
        android:id="@+id/event_description_start_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/no_event_start_date"
        android:layout_below="@id/event_description_tv_start_date"/>

    <TextView
        android:id="@+id/event_description_tv_end_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:text="@string/event_description_tv_end_date"
        android:textAlignment="textStart"
        android:layout_below="@id/event_description_start_date"/>

    <TextView
        android:id="@+id/event_description_end_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/no_event_end_date"
        android:layout_below="@id/event_description_tv_end_date"/>

    <TextView
        android:id="@+id/event_description_tv_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:text="@string/event_description_tv_description"
        android:textAlignment="textStart"
        android:layout_below="@id/event_description_end_date" />

    <EditText
        android:id="@+id/event_description_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/event_description_tv_description"
        android:hint="@string/change_the_description_of_the_event"
        android:inputType="textAutoComplete"
        android:text="@string/no_event_description"
        android:textColor="@color/primaryTextColor" />


    <TextView
        android:id="@+id/event_description_tv_members"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:text="@string/event_description_tv_members"
        android:textAlignment="textStart"
        android:layout_below="@id/event_description_description"/>


    <Button
        android:id="@+id/save"
        style="@style/ButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="@string/save_changes" />


    <ScrollView
        android:layout_width="257dp"
        android:layout_height="275dp"
        android:layout_below="@id/event_description_tv_members"
        android:layout_above="@+id/save"
        >
        <LinearLayout
            android:id="@+id/linear_scroll_members"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>


</RelativeLayout>