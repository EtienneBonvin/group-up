<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainActivity"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


    <TextView
        android:id="@+id/appName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:paddingBottom="170sp"
        android:text="@string/app_name"
        android:textSize="50sp" />

    <TextView
        android:id="@+id/poweredBy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/appName"
        android:gravity="center"
        android:text="@string/welcome_view_powered_by"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/flyingMonkey"
        android:contentDescription="@string/flying_monkey_logo_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="30sp"
        android:layout_below="@id/poweredBy"
        android:alpha="0.7"
        android:layout_centerHorizontal="true"
        android:src="@drawable/flyingmonkey" />

</RelativeLayout>
